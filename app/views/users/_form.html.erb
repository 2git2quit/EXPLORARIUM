
<div id="stylized" class="myform">

<%= form_for(@user) do |f| %>
<h1>USER FORM</h1>
<p>Data entry page for users record</p>

<div class="errormsg" <%if @validates.nil? %>style="visibility:hidden" <%end%> >es
  <div id="msg" style="position: fixed;padding-top:55px;top:100px;border:2px solid;box-shadow: 10px 10px 5px blue;  min-height:30px ; min-width: 750px;background: #81DAF5">
  <% unless @validates.nil?%>
  <% @validates.each do |k,v|%>
     <%=Student.human_attribute_name(k)%>&nbsp;<%=v%><br><br>
  <% end %>
  <br>
  <%end%>
  <input type="button" value="Ok" onclick="jQuery('.errormsg').css('visibility','hidden') ;" >
  </div> 
</div>

  <%=f.hidden_field :id%>

  <label><%= f.label :username %>
    <span class="small">User login</span>
  </label>
   <%= f.text_field :username ,:class => "nocaps"  , :required => true%>

  <label><%= f.label :password %>
    <span class="small">Secret password</span>
  </label>
  <%= f.password_field :password , :class => "nocaps"  , :required => true%>

  <label><%= f.label :fullname %>
    <span class="small">Complete name</span>
  </label>
    <%= f.text_field :fullname %>
  
  <label><%= f.label :role %>
    <span class="small">ADMIN or OPERATOR</span>
  </label>
  <%=  select("user", "role", @roles.collect {|p| [ p, p ] }, { :prompt => 'Select' }, :onChange => 'do_your_thing()',  :selected => @user.role  , :required => true) %>


  <div><input name="commit" type="submit" value="Save" onclick="//this.setAttribute('disabled', 'disabled');"><input type="button" value="Cancel" onclick="document.location.href = '../../users'" ></div>   

  <% end %>
