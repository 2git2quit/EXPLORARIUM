<div id="stylized" class="mylist">

<h3>Users List <%if session[:role].eql? "MANAGEMENT"%><input type="button" value="New User" onclick="document.location.href = '/users/new'" ><%end%></h3>
<table id="example">
<thead>  <tr>
    <th>Username</th>
    <th>Password</th>
    <th>Fullname</th>
    <th>Role</th>
    <th></th>
    <th></th>
  </tr>
</thead>
<tbody>
<% @users.each do |user| %>
  <tr>
    <td><%= user.username %></td>
    <td><%= user.password %></td>
    <td><%= user.fullname %></td>
    <td><%= user.role %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <%if ( (session[:role].eql? "MANAGEMENT" ) && (user.username != "admin")  )%>
    <td><%= link_to 'Delete', "/users/#{user.id}/destroy" %></td></td>
    <%else%>
     <td></td>
    <%end%>
  </tr>
<% end %>
</tbody>
</table>

<br />
</div>
<%#= link_to 'New User', new_user_path %>
