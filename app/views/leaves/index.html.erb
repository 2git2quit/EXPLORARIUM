<div id="stylized" class="mylist">
<h3>Leave Application Form <input type="button" value="Apply New Leave" onclick="document.location.href = '/leaves/new'" ></h3>
<table id="example" class="display">

  <thead>
  <tr>
    <th>Date</th>
    <th>Staff</th>
    <th>Time</th>
    <th></th>
    <th></th>
  </tr>
 </thead>  
 <tbody>
<% @leaves.each do |l| %>

  <tr>
    <td><%= l.schedule_date.strftime('%m/%d/%Y') %></td>
    <td><%= l.staff.lastname %>, &nbsp;<%= l.staff.firstname %></td>
    <td><%= l.time %></td>
    <td width="5%"><%= link_to 'Edit', "/leaves/#{l.id}/edit" %></td>
    <%if ( (session[:role].eql? "MANAGEMENT" )   )%>
         <td width="5%"><%= link_to 'Delete', "/leaves/#{l.id}/destroy" %></td>
    <%else%>
      <td></td>
    <%end%>

  </tr>
<% end %>
</tbody>

</table>
<br />
</div>
